<?xml version="1.0" encoding="UTF-8"?>
<template id="template" xml:space="preserve">

    <t t-name="QrPayPopupWidget" owl="1">
        <div class="modal-dialog">
            <div class="popup popup-quot-order">
                <div class="popup-header">
                    <p class="title"><t t-esc="props.title || 'Qr code payment' " /></p>
                    <div class="header-button-qr-code">
                        <div class="qr-button">
                            <button class="header-button check-qr-pay"
                                    data-action="click_check_qr_paid">Check QR Pay</button>
                        </div>
                        <div class="qr-button">
                            <button class="header-button print-qr-code"
                                    data-action="click_print_qr_code">Print QR</button>
                        </div>
                    </div>

                </div>
                <div class="body-popup-qr-content">
                    <div class="qr-data-content">
                        <div class="qr-data-order-info">
                            <t t-if="env.pos.get_order()">
                                <t>Order Id</t>
                                <br/>
                                <span class="qr-data-value qr-data-order-id"/>
                                <br/>
                                <t>Amount</t>
                                <br/>
                                <span class="qr-data-value qr-data-amount"/>
                                <br/>
                                <t>Transaction Code</t>
                                <br/>
                                <span class="qr-data-value qr-data-transaction-code"/>
                                <br/>
                                <t>Terminal Code</t>
                                <br/>
                                <span class="qr-data-value qr-data-terminal-code"/>
                                <br/>
                                <t>States</t>
                                <br/>
                                <t t-if="props.dataQrOpenPopup.qrPaymentStatus">
                                <span class="qr-data-value qr-data-terminal-paid">Paired</span>
                                </t>
                                <t t-if="!props.dataQrOpenPopup.qrPaymentStatus">
                                    <t>Waiting for payment!!!</t>
                                </t>
                            </t>
                        </div>
                    </div>
                    <div class="qr-data-content">
                        <t t-if="props.dataQrOpenPopup.qrPaymentStatus == 'draft'">
                            <div class="qr-code-content-payment-waiting">
                                <img alt="QR Code"/>
                            </div>
                        </t>
                        <t t-if="props.dataQrOpenPopup.qrPaymentStatus == '00'">
                            <div class="qr-code-content-payment-done">
                                <img src="/ext_qr_payment/static/src/img/check_done.png" alt="Success"
                                     style="width: 200px;height: 200px"/>
                            </div>
                        </t>
                        <t t-if="props.dataQrOpenPopup.qrPaymentStatus == '09'">
                            <div class="qr-code-content-payment-done">
                                <img src="/ext_qr_payment/static/src/img/vtb_update.PNG" alt="Success"
                                     style="width: 200px;height: 200px"/>
                            </div>
                        </t>

<!--                        vtb_update.PNG-->
                    </div>
                </div>
                <footer class="footer centered">
                    <t t-if="props.dataQrOpenPopup.qrPaymentStatus != '00'">
                        <div class="button cancel" t-on-mousedown.prevent="cancel">
                            <t t-esc="props.cancelText"/>
                        </div>
                    </t>
                    <t t-if="props.dataQrOpenPopup.qrPaymentStatus == '00'">
                        <div class="button confirm" t-on-mousedown.prevent="confirm">
                            <t t-esc="props.confirmText"/>
                        </div>
                    </t>

                </footer>
            </div>
        </div>
    </t>
</template>





