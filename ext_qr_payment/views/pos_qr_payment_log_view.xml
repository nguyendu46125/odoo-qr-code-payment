<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_pos_qr_payment_log_tree" model="ir.ui.view">
        <field name="name">pos.qr.payment.logs.tree</field>
        <field name="model">pos.qr.payment.logs</field>
        <field name="priority">4</field>
        <field name="arch" type="xml">
            <tree string="Qr Payment Logs" class="o_sale_order">
                <field name="name"/>
                <field name="create_date"/>
                <field name="log"/>
            </tree>
        </field>
    </record>

    <record id="action_pos_qr_payment_log" model="ir.actions.act_window">
        <field name="name">Pos QR Payment Logs</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">pos.qr.payment.logs</field>
        <field name="view_id" ref="view_pos_qr_payment_log_tree"/>
        <field name="view_mode">tree</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Du-IT!
            </p>
            <p>
                Once the quotation is confirmed by the customer, it becomes a sales order.
                <br/>
                You will be able to create an invoice and collect the payment.
            </p>
        </field>
    </record>

    <menuitem id="menu_pos_qr_payment_log"
              action="action_pos_qr_payment_log"
              name="QR Payment Logs"
              parent="account.menu_finance_receivables"
              sequence="16"/>

</odoo>
