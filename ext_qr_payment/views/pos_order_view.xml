<odoo>
    <record id="pos_order_form_qr_inherit" model="ir.ui.view">
        <field name="name">pos.order.form.qr.inherit</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='payments']//field[@name='amount']" position='before'>
                <field name='is_qr_order_pos' readonly="1"/>
                <field name='pos_qr_payment_id' readonly="1"/>
            </xpath>
        </field>
    </record>

    <record id="pos_payment_form_qr_inherit" model="ir.ui.view">
        <field name="name">pos.payment.form.qr.inherit</field>
        <field name="model">pos.payment</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='amount']" position='before'>
                <field name='is_qr_order_pos' readonly="1"/>
                <field name='pos_qr_payment_id' readonly="1"/>
            </xpath>
        </field>
    </record>

</odoo>
