<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="qr_pos_payment_method_view_form" model="ir.ui.view">
            <field name="name">pos.payment.method.qr.form</field>
            <field name="model">pos.payment.method</field>
            <field name="inherit_id" ref="point_of_sale.pos_payment_method_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='is_cash_count']" position="after">
                    <field name="is_qr_count"/>
                    <field name="bank_code" attrs="{'invisible':[('is_qr_count', '=', False)]}"/>
                    <field name="function_name" attrs="{'invisible':[('is_qr_count', '=', False)]}"/>
                    <field name="client_secret" attrs="{'invisible':[('is_qr_count', '=', False)]}"/>
                    <field name="client_id" attrs="{'invisible':[('is_qr_count', '=', False)]}"/>
                    <field name="provider_id" attrs="{'invisible':[('is_qr_count', '=', False)]}"/>
                    <field name="merchant_id" attrs="{'invisible':[('is_qr_count', '=', False)]}"/>
                    <field name="terminal_id" attrs="{'invisible':[('is_qr_count', '=', False)]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>